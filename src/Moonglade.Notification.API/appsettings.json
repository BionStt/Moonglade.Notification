{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AppSettings": {
    "EnableEmailSending": true,
    "EnableSsl": true,
    "SmtpServerPort": 0,
    "AdminEmail": "{AZURE-APPSVC-ENV}",
    "EmailDisplayName": "{AZURE-APPSVC-ENV}",
    "SmtpPassword": "{AZURE-APPSVC-ENV}",
    "SmtpServer": "{AZURE-APPSVC-ENV}",
    "SmtpUserName": "{AZURE-APPSVC-ENV}",
    "BannedMailDomain": "{AZURE-APPSVC-ENV}",
    "ApiKey": "{AZURE-APPSVC-ENV}"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "1m",
        "Limit": 30
      }
    ]
  },
  "AllowedHosts": "*"
}
